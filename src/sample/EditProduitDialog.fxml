<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.EditProduitDialogController" style="-fx-padding: 20;">
    <Label text="Modifier Produit Fournisseur" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Nom Produit:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nomProduitField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Catégorie:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="categorieField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Prix Fournisseur:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="prixField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Délai Livraison (jours):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="delaiField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Qté Min Commande:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="qteMinField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Statut:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="statutField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Enregistrer" onAction="#handleEnregistrer"/>
        <Button text="Annuler" onAction="#handleAnnuler"/>
    </HBox>
</VBox>
