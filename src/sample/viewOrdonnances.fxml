<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="1101.0" prefWidth="1050.0" stylesheets="@ViewOrdonnances.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ViewOrdonnancesController">
    <children>
        <BorderPane prefHeight="1101.0" prefWidth="1049.0">
            <bottom>
                <TabPane fx:id="mainTabPane" prefHeight="1101.0" prefWidth="1065.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
                    <tabs>
                        <!-- Tab 1: Nouvelle Ordonnance -->
                        <Tab text="🆕 Nouvelle Ordonnance">
                            <!-- هنا يجب أن تضيف fx:id لـ fx:include -->
                            <fx:include source="Ordonnance.fxml" fx:id="ordonnanceFormTab" />
                        </Tab>

                        <!-- Tab 2: Liste des Ordonnances -->
                        <Tab text="📄 Liste des Ordonnances">
                            <VBox prefHeight="1006.0" prefWidth="1007.0" spacing="15" style="-fx-padding: 20;">
                                <!-- Barre de recherche -->
                                <HBox spacing="10">
                                    <TextField fx:id="searchField" prefWidth="300" promptText="🔍 Recherche par patient, médecin, etc." />
                                    <Button onAction="#handleSearch" text="Rechercher" />
                                    <Button onAction="#handleRefresh" text="Actualiser" />
                                </HBox>

                                <!-- TableView -->
                                <TableView fx:id="ordonnanceTable" prefHeight="393.0" prefWidth="942.0">
                                    <columns>
                                        <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                                        <TableColumn fx:id="colClient" prefWidth="150" text="👤 Patient" />
                                        <TableColumn fx:id="colDoctor" prefWidth="150" text="🩺 Médecin" />
                                        <TableColumn fx:id="colDate" prefWidth="100" text="📅 Date" />
                                        <TableColumn fx:id="colTypeVerre" prefWidth="120" text="🔍 Type Verre" />
                                        <TableColumn fx:id="colPriorite" prefWidth="100" text="⚠️ Priorité" />
                                        <TableColumn fx:id="colScan" prefWidth="120" text="📄 Fichier" />
                                        <TableColumn fx:id="colActions" prefWidth="185.0" text="⚙️ Actions" />
                                    </columns>
                                </TableView>
                            </VBox>
                        </Tab>
                    </tabs>
                </TabPane>
            </bottom>

        </BorderPane>
    </children>
</AnchorPane>