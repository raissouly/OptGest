<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ProduitFournisseurFormController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="500.0" spacing="15.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="titleLabel" text="Nouveau Produit" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
                <Separator prefWidth="460.0" />

                <ScrollPane fitToWidth="true" prefHeight="500.0" prefWidth="460.0">
                    <content>
                        <VBox spacing="15.0">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Référence *:" />
                                        <TextField fx:id="referenceField" prefWidth="200.0" promptText="REF001" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Désignation *:" />
                                        <TextField fx:id="designationField" prefWidth="200.0" promptText="Nom du produit" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Fournisseur:" />
                                        <ComboBox fx:id="fournisseurCombo" prefWidth="200.0" promptText="Sélectionner un fournisseur" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Taille:" />
                                        <TextField fx:id="tailleField" prefWidth="200.0" promptText="S, M, L, XL..." />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Quantité *:" />
                                        <TextField fx:id="quantiteField" prefWidth="200.0" promptText="100" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Prix unitaire *:" />
                                        <TextField fx:id="prixUnitaireField" prefWidth="200.0" promptText="99.99" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Couleur:" />
                                        <TextField fx:id="couleurField" prefWidth="200.0" promptText="Rouge, Bleu..." />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Type *:" />
                                        <ComboBox fx:id="typeCombo" prefWidth="200.0" promptText="Sélectionner le type" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Marque:" />
                                        <TextField fx:id="marqueField" prefWidth="200.0" promptText="Nom de la marque" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Stock minimal *:" />
                                        <TextField fx:id="stockMinimalField" prefWidth="200.0" promptText="10" />
                                    </children>
                                </HBox>

                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label minWidth="120.0" text="Statut:" />
                                        <ComboBox fx:id="statutCombo" prefWidth="200.0" />
                                    </children>
                                </HBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Description:" />
                                        <TextArea fx:id="descriptionArea" prefHeight="80.0" prefWidth="400.0" promptText="Description détaillée du produit..." wrapText="true" />
                                    </children>
                                </VBox>

                                <Label text="* Champs obligatoires" textFill="RED">
                                    <font>
                                        <Font size="11.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>

                <Separator prefWidth="460.0" />

                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button fx:id="btnEnregistrer" mnemonicParsing="false" onAction="#handleEnregistrer" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Enregistrer" />
                        <Button fx:id="btnReinitialiser" mnemonicParsing="false" onAction="#handleReinitialiser" prefWidth="100.0" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Réinitialiser" />
                        <Button fx:id="btnAnnuler" mnemonicParsing="false" onAction="#handleAnnuler" prefWidth="100.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Annuler" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>