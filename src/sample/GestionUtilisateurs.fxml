<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ComboBox?>

<AnchorPane prefHeight="400" prefWidth="450" stylesheets="@Utilisateur.css"  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="sample.GestionUtilisateursController" styleClass="main-container">

    <TableView fx:id="tableUsers" layoutX="14" layoutY="14" prefHeight="220" prefWidth="420" styleClass="custom-table">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50" text="ID" styleClass="table-column-header"/>
            <TableColumn fx:id="colUsername" prefWidth="180" text="Username" styleClass="table-column-header"/>
            <TableColumn fx:id="colRole" prefWidth="180" text="Role" styleClass="table-column-header"/>
        </columns>
    </TableView>

    <!-- Buttons for modifier and supprimer -->
    <Button fx:id="btnModifier" disable="true" layoutX="14" layoutY="250" onAction="#btnModifierOnAction"
            prefWidth="90" text="Modifier" styleClass="btn-modify"/>
    <Button fx:id="btnSupprimer" disable="true" layoutX="114" layoutY="250" onAction="#btnSupprimerOnAction"
            prefWidth="90" text="Supprimer" styleClass="btn-delete"/>

    <!-- Embedded Add User Form -->
    <TextField fx:id="txtNewUsername" layoutX="14" layoutY="290" promptText="Nom d'utilisateur"
               prefWidth="130" styleClass="input-field"/>
    <PasswordField fx:id="txtNewPassword" layoutX="154" layoutY="290" promptText="Mot de passe"
                   prefWidth="130" styleClass="input-field"/>
    <ComboBox fx:id="comboNewRole" layoutX="294" layoutY="290" prefWidth="90" promptText="RÃ´le" styleClass="combo-box"/>

    <Button fx:id="btnAjouter" layoutX="14" layoutY="330" onAction="#btnAjouterOnAction"
            prefWidth="90" text="Ajouter" styleClass="btn-add"/>

</AnchorPane>